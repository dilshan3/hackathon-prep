{
  "name": "logistics-issue-tracker-api",
  "version": "1.0.0",
  "description": "Enterprise Logistics Delivery Issue Tracking API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:vercel": "tsc && npm run create-public",
    "create-public": "node -e \"const fs = require('fs'); const path = require('path'); const publicDir = path.join('..', 'public'); if (!fs.existsSync(publicDir)) fs.mkdirSync(publicDir, {recursive: true}); fs.writeFileSync(path.join(publicDir, 'api-status.json'), JSON.stringify({status: 'API Ready', timestamp: new Date().toISOString()}));\"",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup.js",
    "postinstall": "npm run db:generate"
  },
  "keywords": [
    "logistics",
    "delivery",
    "issue-tracking",
    "api",
    "enterprise"
  ],
  "author": "Logistics Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "better-npm-audit": "^3.7.3",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^6.15.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
